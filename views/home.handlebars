<div class="container">
  <h1>workout log</h1>
  <form id="newItem">
    <div class="row">
      <div class="form-group col-xs-6">
        <label class="col-form-label" for="formGroupExampleInput">exercise name:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="ex: bench press">
      </div>
      <div class="form-group col-xs-6">
        <label class="col-form-label" for="formGroupExampleInput">date:</label>
        <input type="date" class="form-control" id="date" name="date" placeholder="mm/dd/yyyy"/>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-3">
        <label class="col-form-label" for="formGroupExampleInput">reps:</label>
        <input type="number" class="form-control" id="reps" name="reps" placeholder="ex: 5" min="1">
      </div>
      <div class="form-group col-xs-3">
        <label class="col-form-label" for="formGroupExampleInput">weight:</label>
        <input type="number" class="form-control" id="weight" name="weight" placeholder="ex: 225" min="1">
      </div>
      <fieldset class="form-group col-xs-6">
        <label class="col-form-label" for="formGroupExampleInput">unit:</label>
        <div class="form-check">
          <label class="form-check-label col-xs-6">
            <input type="radio" class="form-check-input" id="lbs" name="lbs" value="1" checked>  lbs
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label col-xs-6">
            <input type="radio" class="form-check-input" id="lbs" name="lbs" value="0">  kg
          </label>
        </div>
      </fieldset>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <button type="submit" class="btn btn-primary" id="submit">submit</button>
      </div>
    </div>
  </form>
  <div class="table-responsive">
    <table class="table table-condensed table-striped" id="data">
      <thead class="thead-inverse">
        <tr>
          <th>name</th>
          <th>reps</th>
          <th>weight</th>
          <th>unit</th>
          <th>date</th>
          <th>edit</th>
          <th>delete</th>
        </tr>
      </thead>
      {{#if results}}
        {{#each results}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.reps}}</td>
            <td>{{this.weight}}</td>
            <td>{{this.lbs}}</td>
            <td>{{this.date}}</td>
            <td>
              <a href="/edit?id={{this.id}}"><button type="button" class="btn btn-info" value="edit"></button></a>
            </td>
            <td>
              <button type="button" class="btn btn-danger" name="delete" value="delete" onClick="deleteRow('data',{{this.id}})"></button>
              <input type="hidden" id="delete{{this.id}}">
            </td>
          </tr>
        {{/each}}
      {{/if}}
    </table>
  </div>
</div>